{
  "name": "@toolbarthomas/harbor",
  "version": "0.8.0",
  "description": "Boilerplate for Drupal Themes",
  "main": "./bin/Harbor.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-s clean sync && run-p stylesheets javascripts images",
    "clean": "node ./index.js task=clean",
    "resolver": "node ./index.js task=resolver",
    "sync": "node ./index.js task=sync",
    "stylesheets": "node ./index.js task=stylesheets",
    "javascripts": "node ./index.js task=javascripts",
    "images": "node ./index.js task=images",
    "serve": "node ./index.js task=serve"
  },
  "files": [
    "bin/",
    ".babelrc",
    ".browserlistrc",
    ".eslintignore",
    ".eslintrc",
    ".prettierrc",
    ".stylelintrc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolbarthomas/harbor.git"
  },
  "keywords": [
    "Drupal",
    "Theme"
  ],
  "author": "Thomas van der Velde <contact@toolbarthomas.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toolbarthomas/harbor/issues"
  },
  "homepage": "https://github.com/toolbarthomas/harbor#readme",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.5",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "imagemin": "^6.1.0",
    "imagemin-svgo": "^7.0.0",
    "log-symbols": "^3.0.0",
    "mkdirp": "^0.5.1",
    "module-config-loader": "^0.2.0",
    "node-sass": "^4.12.0",
    "node-sass-glob-importer": "^5.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.16",
    "postcss-combine-duplicated-selectors": "^7.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.6.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.6.1",
    "svgstore": "^3.0.0-2"
  }
