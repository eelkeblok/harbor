{
  "name": "@toolbarthomas/harbor",
  "version": "0.9.3",
  "description": "Boilerplate for Drupal Themes",
  "main": "./bin/Harbor.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-s clean sync && run-p stylesheets javascripts images",
    "clean": "node ./index.js task=clean",
    "resolver": "node ./index.js task=resolver",
    "sync": "node ./index.js task=sync",
    "stylesheets": "node ./index.js task=stylesheets",
    "javascripts": "node ./index.js task=javascripts",
    "images": "node ./index.js task=images",
    "serve": "node ./index.js task=serve"
  },
  "files": [
    "bin/",
    ".babelrc",
    ".browserlistrc",
    ".eslintignore",
    ".eslintrc",
    ".prettierrc",
    ".stylelintrc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolbarthomas/harbor.git"
  },
  "keywords": [
    "Drupal",
    "Theme"
  ],
  "author": "Thomas van der Velde <contact@toolbarthomas.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toolbarthomas/harbor/issues"
  },
  "homepage": "https://github.com/toolbarthomas/harbor#readme",
  "dependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "autoprefixer": "^9.8.2",
    "browser-sync": "^2.26.7",
    "chalk": "^4.1.0",
    "copyfiles": "^2.3.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "imagemin": "^7.0.1",
    "imagemin-svgo": "^8.0.0",
    "log-symbols": "^4.0.0",
    "mkdirp": "^1.0.4",
    "module-config-loader": "^0.3.2",
    "node-sass": "^4.14.1",
    "node-sass-glob-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-combine-duplicated-selectors": "^9.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "svgstore": "^3.0.0-2"
  }
