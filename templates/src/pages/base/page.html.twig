{#
/**
 * Default document layout for a Drupal Page
 *
#}

{% block document_before %}{% endblock %}

<div class="vertical-flow">
  <div class="vertical-flow__header">
    {{ block('header_before') }}
    {{ page.header }}
    {{ block('header_after') }}
  </div>

  <div class="vertical-flow__main">
    {{ block('content_before') }}
    {{ page.content }}
    {{ block('content_after') }}
  </div>

  <div class="vertical-flow__footer">
    {{ block('footer_before') }}
    {{ page.footer }}
    {{ block('footer_after') }}
  </div>
</div>

{% block document_after %}{% endblock %}